{
    "name": "SmartBlocker",
    "version": "1.2",
    "description": "SmartBlocker allows you to surf the internet without any pesky ads. Our service will remove almost any ad on the internet!",
    "options_page": "options.html",
    "manifest_version": 2,

    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "webRequest",
        "webRequestBlocking",
        "storage"
           
    ],


    "background": {
        "scripts": [ "SmartBlock.js" ],
        "persistent": true,

        "browser_action": {
            "default_icon": {
                "16": "images/icon.png",
                 "24": "images/icon.png",         
                  "32": "images/icon.png"
            }

        }


    }

    }


